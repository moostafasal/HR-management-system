@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}
    @if(TempData["massage"]!=null){
        <div>class="alert alert-success d-flex align-items-center" role="alert">
          <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
          <div>
                    @TempData["massage"];
          </div>
    </div>


    }
@if (TempData["DeletMasseg"] != null)
{
    <div class="w3-panel w3-green">
        <h3>Success!</h3>
        <p>@TempData["DeletMasseg"]</p>
    </div>



}
 
<h1>All Departments</h1>
<br />
<a asp-controller="Department"     asp-action="Create" class="btn btn-primary mt-5">Create New Department</a>
<br />
<br />

@if (Model?.Count() > 0)
{
    <table class="table table-stripped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(M => M.Code)</th>
                <th>@Html.DisplayNameFor(M => M.Name)</th>
                <th>@Html.DisplayNameFor(M => M.DateOfCaraTion)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.DateOfCaraTion</td>
                    <td>
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.id">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                   
                </tr>
            }
        </tbody>
    </table>
    }
else
{
    <div class="mt-5  alert alert-warning">
        <h4>No Departments Found!!</h4>
    </div>
}

